{
  "installCommand": "pnpm install --legacy-peer-deps",
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/index.js" }, // Point API to root index.js
    { "src": "/(.*)", "dest": "/src/$1" }        // Serve static assets from `/src`
  ]
}
